<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow effect -->
    <item android:left="4dp" android:top="4dp">
        <shape>
            <solid android:color="#461D87" /> <!-- Shadow color -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main background with gradient -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#885508"
                android:centerColor="#082227"
            android:endColor="#052127"
            android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
